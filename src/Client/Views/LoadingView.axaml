<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Axorith.Client.ViewModels"
             xmlns:converters="using:Axorith.Client.Converters"
             x:Class="Axorith.Client.Views.LoadingView"
             x:DataType="vm:LoadingViewModel">
    <Border Background="#1E1E1E" Padding="40">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
            <TextBlock Text="â³" 
                       FontSize="64" 
                       Foreground="#4A9EFF"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Message}" 
                       FontSize="16" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding SubMessage}" 
                       FontSize="13" 
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       IsVisible="{Binding SubMessage, Converter={x:Static converters:AppConverters.IsNotNullOrEmpty}}"/>
        </StackPanel>
    </Border>
</UserControl>
