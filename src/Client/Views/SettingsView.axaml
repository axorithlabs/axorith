<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Axorith.Client.ViewModels"
             x:Class="Axorith.Client.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    <Border Background="#1E1E1E" Padding="20">
        <StackPanel Margin="10" Spacing="16">
            <TextBlock Text="Client Settings"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Left"/>

            <Border Padding="12" BorderThickness="1" BorderBrush="#444" CornerRadius="4">
                <StackPanel Spacing="8">
                    <CheckBox Content="Minimize to tray on close"
                              IsChecked="{Binding MinimizeToTrayOnClose}"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="10">
                <Button Content="Save" Command="{Binding SaveCommand}" Classes="accent"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
