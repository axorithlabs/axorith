<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Axorith.Shared.Platform</AssemblyName>
        <RootNamespace>Axorith.Shared.Platform</RootNamespace>
        
        <Description>Platform-specific implementations for Axorith (Windows, Linux, macOS)</Description>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Sdk\Axorith.Sdk.csproj" />
    </ItemGroup>

    <ItemGroup>
        <!-- Windows-specific API (needed for compilation even on non-Windows) -->
        <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="10.0.0" />
        
        <!-- Logging -->
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.0" />
    </ItemGroup>
</Project>
