{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feat", "feature"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## 🛠 Improvements",
      "labels": ["refactor", "perf"]
    },
    {
      "title": "## 📦 Build & CI",
      "labels": ["build", "ci"]
    }
  ],
  "ignore_labels": [
    "chore",
    "docs"
  ],
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "template": "${{CHANGELOG}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- No changes found"
}