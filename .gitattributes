# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.cs     text diff=csharp eol=crlf
*.csproj text eol=crlf
*.sln    text eol=crlf
*.props  text eol=crlf
*.targets text eol=crlf

# Documentation
*.md       text eol=lf
*.markdown text eol=lf
*.txt      text eol=lf
LICENSE    text eol=lf

# Config files
*.json     text eol=lf
*.yml      text eol=lf
*.yaml     text eol=lf
*.xml      text eol=lf
*.config   text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Web files
*.html     text eol=lf
*.css      text eol=lf
*.js       text eol=lf
*.ts       text eol=lf

# Shell scripts
*.sh       text eol=lf
*.bash     text eol=lf
*.ps1      text eol=crlf

# Binary files
*.dll      binary
*.exe      binary
*.pdb      binary
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.ico      binary
*.zip      binary
*.7z       binary
*.nupkg    binary
